<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RecordView">
        <attr name="slide_to_cancel_text" format="string" />
        <attr name="slide_to_cancel_arrow" format="reference" />
        <attr name="slide_to_cancel_margin_right" format="dimension" />
        <attr name="slide_to_cancel_bounds" format="dimension" />
        <attr name="slide_to_cancel_arrow_color" format="color" />
        <attr name="counter_time_color" format="color" />

    </declare-styleable>

    <declare-styleable name="RecordButton">
        <attr name="mic_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomProgressBarAtt">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="progressbarColor" format="color" />
        <attr name="defaultColor" format="color" />
        <attr name="progressBarThickness" format="dimension" />

    </declare-styleable>

    <declare-styleable name="PhonicPlayerViewAtt">
        <attr name="custom_layout" format="reference" />
        <attr name="btn_color" format="reference" />
        <attr name="seek_selector" format="reference" />
        <attr name="is_in_list" format="boolean" />
        <attr name="duration_start" format="boolean" />
        <attr name="duration_end" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaveformSeekBar">
        <attr name="wave_progress" format="float" />
        <attr name="wave_max_progress" format="float" />
        <attr name="wave_visible_progress" format="float" />
        <attr name="wave_width" format="dimension" />
        <attr name="wave_gap" format="dimension" />
        <attr name="wave_padding_top" format="dimension" />
        <attr name="wave_padding_Bottom" format="dimension" />
        <attr name="wave_padding_left" format="dimension" />
        <attr name="wave_padding_right" format="dimension" />
        <attr name="wave_min_height" format="dimension" />
        <attr name="wave_corner_radius" format="dimension" />
        <attr name="wave_background_color" format="color" />
        <attr name="wave_progress_color" format="color" />
        <attr name="wave_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="marker_width" format="dimension" />
        <attr name="marker_color" format="color" />
        <attr name="marker_text_size" format="dimension" />
        <attr name="marker_text_color" format="color" />
        <attr name="marker_text_padding" format="dimension" />
    </declare-styleable>

</resources>
